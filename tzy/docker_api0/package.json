{
  "name": "docker_api",
  "version": "0.0.0",
  "description": "Dockerized WebAPI",
  "main": "./src/server.js",
  "type": "module",
  "scripts": {
    "start": "nodemon --exec babel-node ./src/server.js",
    "test": "env BABEL_ENV=test  mocha --no-config --timeout 5000 --require @babel/register",
    "build": "babel src --out-dir ./dist --source-maps",
    "build:prod": "babel src --out-dir ./dist",
    "serve": "node ./dist/server.js",
    "debug": "node --inspect-brk ./dist/server.js"
  },
  "author": "Alberto L. Bonfiglio",
  "license": "ISC",
  "eslintIgnore": [
    "node_modules"
  ],
  "babel": {
    "env": {
      "build": {
        "presets": [
          "@babel/preset-env"
        ],
        "plugins": [
          "@babel/plugin-proposal-class-properties"
        ]
      },
      "test": {
        "presets": [
          "@babel/env"
        ],
        "plugins": [
          "@babel/plugin-proposal-class-properties",
          "@babel/plugin-transform-runtime"
        ]
      }
    }
  },
  "standard": {
    "env": [
      "mocha"
    ]
  },
  "mocha": {
    "diff": true,
    "extension": [
      "js"
    ],
    "require": [
      "@babel/register"
    ],
    "opts": false,
    "package": "./package.json",
    "reporter": "spec",
    "slow": 75,
    "timeout": 2000,
    "ui": "bdd",
    "spec": "./test/*.spec.js",
    "watch-files": [
      "./app/*.js",
      "./test/*.spec.js"
    ],
    "watch-ignore": [
      "./node_modules/**"
    ]
  },
  "dependencies": {
    "babel-node": "0.0.1-security",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "express-fileupload": "^1.1.6",
    "gm": "^1.23.1",
    "lodash": "^4.17.15",
    "pdf-image": "^2.0.0",
    "unoconv-promise": "^1.0.8",
    "uuidv4": "^6.0.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/node": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.8.7",
    "@babel/register": "^7.8.6",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "mocha": "^7.1.0",
    "mocha-junit-reporter": "^1.23.3",
    "nodemon": "^2.0.3",
    "webpack": "^4.42.0"
  }
}
